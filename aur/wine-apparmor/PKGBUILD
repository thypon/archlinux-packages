# Maintainer: Andrea Brancaleni <miwaxe@gmail.com>
pkgname=wine-apparmor
pkgver=0.1
pkgrel=1
pkgdesc="Wine Apparmor Profile"
arch=('any')
license=('GPLv3')
depends=('apparmor-profiles')
optdepends=('apparmor')
source=('usr.bin.wineserver'
        'usr.bin.wine-preloader')
md5sums=('277abdd58cb0b9383634e74ab7349324'
         '7c636e5ba52efe0c78c341d5390ec3d5')

package() {
  mkdir -p "$pkgdir/etc/apparmor.d"
  install -Dm700 usr.bin.wine-preloader "$pkgdir/etc/apparmor.d/usr.bin.wine-preloader"
  install -Dm700 usr.bin.wineserver "$pkgdir/etc/apparmor.d/usr.bin.wineserver"
}

